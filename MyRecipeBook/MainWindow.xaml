<Page x:Class="MyRecipeBook.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyRecipeBook"
        mc:Ignorable="d"
        Title="My Recipe Book" Width="600" Background="White" Height="350"
      WindowTitle="Main menu"
      WindowHeight="410"
      WindowWidth="610">
        
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="myFridgeButton" Content="My Fridge" HorizontalAlignment="Left" Height="55.5" Margin="10,0,0,10" VerticalAlignment="Bottom" Width="165" Click="myFridgeButton_Click"/>
        <Button x:Name="allRecipesButton" Content="All Recipes" Height="55.5" Margin="214.5,0,212.5,10" VerticalAlignment="Bottom" Click="allRecipesButton_Click"/>
        <Button x:Name="exitButton" Content="Exit" Height="55.5" Margin="0,0,10,10" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="165" Click="exitButton_Click"/>
        <Image x:Name="logo" Source="logo1.jpg" Margin="10,10,19,70.5"/>


    </Grid>


</Page>
