<Page x:Class="MyRecipeBook.FormRecipesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyRecipeBook"
        mc:Ignorable="d"
        Title="Recipes" Height="350" Width="600"
         WindowTitle="Recipes"
          WindowHeight="410"
      WindowWidth="610">
    <Grid>
        <Button x:Name="backButton" Content="Back" Height="55.5" Margin="10,0,0,10" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="165" Click="backButton_Click"/>
        <Button x:Name="mainMenuButton" Content="Main Menu" Height="55.5" Margin="0,0,10,10" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="165" Click="mainMenuButton_Click"/>
        <ListBox x:Name="listBox" HorizontalAlignment="Left" Height="260" Margin="10,10,0,0" VerticalAlignment="Top" Width="580" SelectionChanged="listBox_SelectionChanged_1"/>
        <Label x:Name="label" Content="" Margin="180,0,180,10" VerticalAlignment="Bottom" Height="55.5"/>


    </Grid>
</Page>
